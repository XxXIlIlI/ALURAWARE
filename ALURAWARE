(function() {
    // Seleciona todas as alternativas
    const alternativas = document.querySelectorAll('.alternativeList-item');

    alternativas.forEach(item => {
        const isCorrect = item.getAttribute('data-correct') === 'true';
        if (isCorrect) {
            const input = item.querySelector('input[type="radio"]');
            if (input) {
                input.checked = true; // Marca a alternativa correta
            }
        }
    });

    // Tenta clicar no botão de enviar, se houver
    const botaoEnviar = document.querySelector('button[type="submit"], .submit-button');
    if (botaoEnviar) botaoEnviar.click();

    console.log("Questionário preenchido automaticamente!");
})();
