// Seleciona todas as alternativas
const alternativas = document.querySelectorAll(".alternativeList-item");

alternativas.forEach(li => {
    const feedback = li.querySelector(".alternativeList-item-alternativeOpinion")?.innerText || "";
    
    // Checa se o feedback indica que é a resposta correta
    if (feedback.includes("Muito bem")) {
        const input = li.querySelector("input[type='radio'], input[type='checkbox']");
        if (input && !input.checked) {
            input.click(); // Marca a alternativa correta
        }
    }
});

// Clica no botão de enviar/responder
const botaoEnviar = document.getElementsByClassName("task-actions-button")[0];
if (botaoEnviar) {
    botaoEnviar.click();
}
