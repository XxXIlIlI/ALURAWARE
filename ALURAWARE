(function() {
    'use strict';

    // Seleciona todas as alternativas corretas (radio e checkbox)
    const alternativasCorretas = document.querySelectorAll(".alternativeList-item[data-correct='true']");

    alternativasCorretas.forEach(item => {
        const radio = item.querySelector("input[type='radio']");
        const checkbox = item.querySelector("input[type='checkbox']");

        if (radio) radio.checked = true;
        if (checkbox) checkbox.checked = true;

        // Destaque visual opcional para ver a resposta correta
        item.style.backgroundColor = "rgba(0,255,0,0.2)";
    });

    console.log(`Marcadas ${alternativasCorretas.length} alternativas corretas.`);
})();
