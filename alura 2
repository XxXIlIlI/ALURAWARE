javascript:(function(){  function decodeBase64Recursively(str){    try{      let decoded = atob(str);      if(/^[A-Za-z0-9+/=]+$/.test(decoded)){        return decodeBase64Recursively(decoded);      }      return decoded;    }catch(e){return str;}  }  function autoSort(){    const container=document.querySelector(".blocks");    if(!container)return;    const encoded=container.getAttribute("data-correct-order");    if(!encoded)return;    const decoded=decodeBase64Recursively(encoded).trim();    const correctBlocks=decoded.split(",").map(x=>x.trim().replace(/;$/,""));    const origin=document.querySelector("#sortBlocksOrigin");    const destination=document.querySelector("#sortBlocksDestination");    if(!origin||!destination)return;    correctBlocks.forEach(txt=>{      const block=[...origin.querySelectorAll(".block")].find(b=>b.textContent.replace(";","").trim()===txt);      if(block){destination.appendChild(block.parentElement);}    });    const submit=document.querySelector("#submitBlocks");    if(submit)submit.click();  }  setTimeout(autoSort,800);})();
